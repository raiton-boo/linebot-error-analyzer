# PyPI公開用ファイル設定
include README.md
include LICENSE

# パッケージファイルを含める
recursive-include linebot_error_analyzer *.py
recursive-include linebot_error_analyzer py.typed

# 不要なファイルを除外
prune tests
prune examples  
prune docs
prune .pytest_cache
prune __pycache__

# Git・開発関連を除外
exclude .gitignore
exclude requirements.txt
exclude *.pyc
exclude *.pyo
exclude *~
exclude .DS_Store
prune .git
